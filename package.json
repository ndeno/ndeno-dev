{
  "name": "ndeno-dev",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:login": "turbo dev --filter=ndeno-login",
    "dev:web": "turbo dev --filter=ndeno-web",
    "dev:auth": "turbo dev --filter=ndeno-auth",
    "dev:confetti": "turbo dev --filter=confetti",
    "build:login": "turbo build --filter=ndeno-login",
    "build:login:standalone": "turbo build:standalone --filter=ndeno-login",
    "build:confetti": "turbo build --filter=confetti",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "3.2.5",
    "storybook": "8.0.10",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
