{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ES2022",
    "skipLibCheck": true,
    "outDir":  "es/",

    "declaration": true, // Set declaration to false to omit generating .d.ts files
    "sourceMap": true,

    "moduleResolution": "Node",

    "jsx": "react-jsx",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["es", "node_modules"],
}
