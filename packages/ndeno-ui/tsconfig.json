{
  "compilerOptions": {
    "incremental": true,
    "module": "ESNext",
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "strict": true,
    "alwaysStrict": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "types": [],
    "outDir": "./types",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "./types"
  },
  "include": [
    "src/components/**/*",  
    "src/index.ts",  
  ],
  "exclude": ["node_modules", "dist", "**/*.css.ts"]
}
